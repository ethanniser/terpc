{
  "name": "@terpc/root",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20.x",
    "pnpm": "9.x"
  },
  "packageManager": "pnpm@9.4.0",
  "workspaces": [
    "docs",
    "examples/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "build:all": "turbo run build",
    "build": "turbo run build --filter \"./packages/*\" --concurrency=15",
    "clean": "turbo run clean && git clean -xdf node_modules",
    "dev:all": "turbo watch dev",
    "dev": "turbo watch dev --filter \"./packages/*\"",
    "lint": "turbo run lint && manypkg check",
    "format:check": "prettier --check .",
    "format": "prettier --write . --list-different",
    "test": "vitest run",
    "test:all": "turbo test",
    "test:watch": "vitest",
    "typecheck": "turbo run typecheck"
  },
  "dependencies": {
    "@actions/github": "^6.0.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@manypkg/cli": "^0.21.3",
    "@prettier/sync": "^0.5.2",
    "@types/bun": "^1.1.5",
    "@types/node": "^20.14.0",
    "@terpc/eslint-config": "workspace:*",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "turbo": "2.0.6-canary.0",
    "typescript": "^5.5.2",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.6.0"
  }
}
